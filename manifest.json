{
	"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": ".save",
  "description": "Save Mode: âŒ˜M. Click to save.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/inactive.png"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Command+M",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["lib/background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage",
		"downloads",
    "http://*/*",
		"https://*/*"
  ]
}
